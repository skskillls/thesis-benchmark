# Stage 1: Build
FROM golang:1.21 AS builder
WORKDIR /app
COPY go.mod .
COPY main.go .
# Compile as a standalone binary so it doesn't rely on system libraries in the final image
RUN CGO_ENABLED=0 go build -o main .

# Stage 2: Runtime 
FROM alpine:latest
WORKDIR /root/
COPY --from=builder /app/main .
CMD ["./main"]